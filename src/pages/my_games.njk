---
layout: layouts/base.njk
title: My Games
permalink: /mygames/page/{{ pagination.pageNumber + 1 }}/
pagination:
  data: collections.games
  size: 8
  alias: game
---

<h1>My Games</h1>

<div id="game-container" class="grid-container">
  {% for game in pagination.items %}
    <div class="card">
      <img src="/gameicons/{{ game.coverImage }}" alt="{{ game.title }}" class="card-image">
      <h2>{{ game.title }}</h2>
      <p>{{ game.description }}</p>
      <p><strong>Year:</strong> {{ game.year }}</p>
      <p><strong>Publisher:</strong> {{ game.publisher }}</p>
      <p><strong>Console:</strong> {{ game.console }}</p>
    </div>
  {% endfor %}
</div>
<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr); 
        gap: 20px;
        padding: 20px;
    }

    .card {
        background-color: #1e1e1e;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        padding: 15px;
        text-align: center;
        transition: transform 0.3s;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .card-image {
        max-width: 100px;
        height: auto;
        margin-bottom: 10px;
    }

    .card h2 {
        font-size: 1.2em;
        margin: 10px 0;
        color: #ffffff;
    }

    .card p {
        font-size: 0.9em;
        color: #b0b0b0;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination a {
        margin: 0 5px;
        padding: 8px 12px;
        text-decoration: none;
        color: #333;
        background-color: #f4f4f4;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .pagination a:hover {
        background-color: #ddd;
    }

    .pagination a.active {
        background-color: #333;
        color: white;
    }

    .pagination a {
        color: #e0e0e0;
        background-color: #333;
    }

    .pagination a:hover {
        background-color: #444;
    }

    .pagination a.active {
        background-color: #bb86fc;
        color: white;
    }
</style>
{# hi #}
{# <h3><pre>{{ pagination.pages | dump }}</pre></h3> #}
{% set counter = 0 %}
<div class="pagination">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">Previous</a>
  {% endif %}

  {% for i in pagination.pages %}
    {% set counter = counter + 1 %}
    &nbsp;<a href="/mygames/page/{{ counter }}/"> Page {{ counter }} </a>&nbsp;
  {% endfor %}
  
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Next</a>
  {% endif %}
</div>